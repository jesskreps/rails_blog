<p id="notice"><%= notice %></p>
<h1>This is my Blog</h1>
<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Titles</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.titles %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% @posts.each do |post| %>
  <% if post.titles == 'foo' %>
  <h3>I can't believe it's <%= post.titles %>!</h3>
  <% else %>
  <h3>Oh Well!</h3>
  <% end %>
<% end %>

<br>

<%= link_to 'New Post', new_post_path %>
